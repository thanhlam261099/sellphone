@model Lab2.Models.ProductToCart
@{
    ViewData["Title"] = "Cart";
}

<h3>Cart Page</h3>
<form method="post" enctype="multipart/form-data">
    <table class="table-bordered table">
        <tr>
            <th>Option</th>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in Model.products)
        {
            <tr>
                <td><a style="color:red" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductId">x</a></td>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>
                    <img src="~/images/@item.ProductImage" width="60" height="60" />
                </td>
                <td>@item.ProductPrice </td>
                <td>
                    @item.ProductPrice
                </td>
            </tr>
        }
        <tr>
            <td align="right" colspan="5">Sum</td>
            <td>
                @Model.products.Sum(i => i.ProductPrice)
            </td>
        </tr>
    </table>
    <div class="col-4" style="padding-left:30px;">

        <div class="form-group row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12">
                <lable>Name:</lable>
            </div>
            <div class="col-12" style="padding-bottom:15px;">
                <input asp-for="@Model.order.CustomerName" class="form-control" />
                <span asp-validation-for="order.CustomerName" class="text-danger"></span>
            </div>
            <div class="col-12">
                <lable>Phone:</lable>
            </div>
            <div class="col-12" style="padding-bottom:15px;">
                <input asp-for="@Model.order.CustomerPhone" class="form-control" />
                <span asp-validation-for="order.CustomerPhone" class="text-danger"></span>
            </div>
            <div class="col-12">
                <lable>Address:</lable>
            </div>
            <div class="col-12" style="padding-bottom:15px;">
                <input asp-for="@Model.order.CustomerAddress" class="form-control" />
                <span asp-validation-for="order.CustomerAddress" class="text-danger"></span>
            </div>
            <div class="col-12">
                <button type="submit" id="btnPlaceOrder" class="btn btn-success">Order</button>
            </div>
        </div>
    </div>
</form>
    <br>
    <a asp-controller="Home" asp-action="index">
        Continue Shopping
    </a>

